<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" cols="30" rows="10" placeholder="blog post goes here"><%= blog.body %></textarea>
        </div>
        <button class="big ui purple animated button" tabindex="0">
            <div class="visible content">
                Done
            </div>
            <div class="hidden content">
                <i class="check circle outline icon"></i>
            </div>
        </button>
    </form>
</div>
<% include partials/footer %>
